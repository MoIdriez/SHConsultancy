@section Scripts {
    <script type="text/javascript">
        $(".service").click(function () {
            var content = $("#" + $(this).attr("data-modal-content-id")).html();
            var title = $(this).attr("data-modal-content-title");

            $(".modal-title").text(title);
            $(".modal-body").html(content);

            $('.modal').modal('show');
        });
    </script>
    
}

@helper Section(string id, string title, string fa, bool alt = false)
{
    <!-- Service -->
    <div class="col-md-4 col-sm-6">
        <div class="service" data-modal-content-title="@title" data-modal-content-id="@id" style="cursor: pointer; @(alt ? "background-color: white; box-shadow: none;" : String.Empty)">
            <i class="fa @fa"></i>
            <div class="service-body">
                <h3>@title</h3>
            </div>
        </div>
    </div>
}